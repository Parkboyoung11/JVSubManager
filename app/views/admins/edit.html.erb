<% content_for :page_name do %>
  Admin Manager
<% end %>
<div class="container">
  <legend>Change Password</legend>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <%= form_for @admin, html: {class: "form-horizontal"} do |f| %>
            <div class="form-group">
              <%= f.label :current_password, "Current Password", class: "col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.password_field :current_password, class: "form-control", required: true  %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :new_password, "New Password", class: "col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.password_field :password, class: "form-control", required: true  %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :new_password_confirm, "Confirm New Password", class: "col-md-4 control-label" %>
              <div class="col-md-6">
                <%= f.password_field :password_confirm, class: "form-control", required: true  %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-6 col-md-offset-4">
                <%= f.submit "Change Password", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
