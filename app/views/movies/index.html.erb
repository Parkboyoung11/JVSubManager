<% content_for :page_name do %>
  Movie Manager
  <a href="<%= new_movie_url %>"><button type="button" class="btn btn-primary">Create New</button></a>
<% end %>

<div class="container">
  <table id="listtable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
    <tr>
      <th class="th-sm">Name
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm">Description
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm">Views
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm">Language
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm">Preview
        <i class="fa fa-sort float-right" aria-hidden="true"></i>
      </th>
      <th class="th-sm" style="width: 120px">Action
      </th>
    </tr>
    </thead>
    <tbody>
    <% @movies.each do |movie| %>
      <tr id="row-<%= movie.id %>">
        <td><%= movie.name %></td>
        <td><%= truncate(movie.description, :length => 300, :omission => '...') %></td>
        <td><%= movie.views %></td>
        <td><%= movie.language %></td>
        <td>
          <img src="<%= movie.image %>" width="100">
        </td>
        <td>
          <% if current_admin.present? %>
            <a href="<%= edit_movie_url(movie.id) %>" type="button" class="btn btn-info">Update</a>
            <%= link_to "Delete", movie, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
<% content_for :customscript do %>

<% end %>