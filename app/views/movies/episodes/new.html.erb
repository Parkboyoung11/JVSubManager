<% content_for :page_name do %>
  Episode Manager
<% end %>
<div class="container">
  <%= form_for @episode, multipart: true do |f| %>
    <legend>Create new Episode</legend>
    <div class="form-group">
      <%= f.label :name, "Name"%>
      <%= f.text_field :name, class: "form-control", required: true  %>
    </div>
    <div class="form-group">
      <%= f.label :video, "Video Link"%>
      <%= f.text_field :video, class: "form-control", required: true  %>
    </div>
    <div class="form-group">
      <%= f.label :image, "Image Link"%>
      <%= f.text_field :image, class: "form-control", required: true  %>
    </div>
    <div class="form-group" style="display: none">
      <%= f.label :movie_id, "Name"%>
      <%= f.text_field :movie_id, class: "form-control", required: true, value: @movie_id  %>
    </div>
    <%= f.submit "Create", class: "btn btn-primary", style: "margin-bottom: 20px"%>
  <% end %>
</div>
